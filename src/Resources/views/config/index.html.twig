
{% extends "@IntractoElasticSynonym/base.html.twig" %}
{% trans_default_domain 'IntractoElasticSynonym' %}

{% block intracto_elastic_synonym_content %}
    <h1>{{ 'config.index.title'|trans }}</h1>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">{{ 'config.id'|trans }}</th>
            <th scope="col">{{ 'config.name'|trans }}</th>
            <th scope="col">{{ 'config.file'|trans }}</th>
            <th scope="col">{{ 'config.indices'|trans }}</th>
            <th scope="col">{{ 'config.actions.title'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for config in configs %}
            <tr>
                <th scope="row">{{ config.id }}</th>
                <td>{{ config.name }}</td>
                <td>{{ config.file }}</td>
                <td>{{ config.indices|join(', ') }}</td>
                <td>
                    <div class="btn-group" role="group" aria-label="{{ 'config.actions.title'|trans }}">
                        <a href="{{ path('intracto_elastic_synonym.config.refresh', {id: config.id}) }}" class="btn btn-secondary">{{ 'config.actions.refresh'|trans }}</a>
                        <a href="{{ path('intracto_elastic_synonym.synonym.index', {id: config.id}) }}" class="btn btn-primary">{{ 'config.actions.synonyms'|trans }}</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock intracto_elastic_synonym_content %}